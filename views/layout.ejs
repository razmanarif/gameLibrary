<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
    <title>PlayFolio</title>

</head>
<body>
<div class="navbar navbar-dark bg-dark d-flex flex-row">
<nav style="margin-left:20px">
    <a href="/" class="text-white text-decoration-none"><h1>PlayFolio</h1></a>

    <% if(currentUser){ %>
        <div class="text-white">Hello <%= currentUser.firstName %> !</div>
        <img class="rounded-circle" height= "50px" width = "50px" class="img-thumbnail" src="/uploads/<%= currentUser.profilePicture %>"

      />
    <% } %>

    <a href="/" class="btn btn-light">Home</a>
    <a href="/add_console" class="btn btn-light">Add a console</a>
    <% if(currentUser){ %>
    <a href="/auth/logout" class="btn btn-danger" data-method="DELETE">Logout</a>
    <% } %> 


</nav>
</div>
<%- body %>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>

</body>
</html>
